{
  "title"       : "{{ post.title }}",
  "description" : {% if post.description != null %}"{{ post.description }}"{% else %}"DR3WH0"{% endif %},
  "category"    : "{{ post.category }}",
  "tags"        : [{% for tag in post.tags %}"{{ tag }}",{% endfor %} null],
  "href"        : "{{ post.url }}",
  "date"        : {
    "day"   : "{{ post.date | date: "%d" }}",
    "month" : "{{ post.date | date: "%B" }}",
    "year"  : "{{ post.date | date: "%Y" }}"
  }
}
